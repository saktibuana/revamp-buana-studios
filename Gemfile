source "https://rubygems.org"

# Core Jekyll gem
gem "jekyll", "~> 3.9"

# Theme compatible with Jekyll 3.9
gem "minima", "~> 2.5"

# Plugins for enhanced functionality
gem "jekyll-admin", "~> 0.10.0"       # Admin interface
gem "jekyll-seo-tag", "~> 2.8.0"      # Adds SEO metadata
gem "jekyll-sitemap", "~> 1.4.0"      # Generates a sitemap.xml
gem "jekyll-feed", "~> 0.16.0"        # Adds RSS feeds
gem "jekyll-paginate", "~> 1.1.0"     # Pagination for posts
gem "jekyll-redirect-from", "~> 0.16.0" # Redirects from old URLs
gem "sassc", "~> 2.4.0" # For SCSS compilation, if required

# Required for Ruby 3.x
gem "webrick", "~> 1.8.1"

# Markdown parsing
gem "kramdown", "~> 2.3.0"
gem "kramdown-parser-gfm", "~> 1.1.0"

# Asset pipeline
gem "jekyll-assets", "~> 2.4.0" # Compatible with Jekyll 3.x and avoids rack conflicts

# Windows-specific dependencies
gem "wdm", "~> 0.1.1" if Gem.win_platform?

# Ensure compatibility with Ruby's StringIO handling
# gem "stringio", "~> 3.1.2"

# Dependency management
gem "bundler", "~> 2.4.14"
